<h1>Собрание статей </h1>
<button class = "btn btn-warning btn-mini">
  <%= link_to 'Добавть новую статью', new_article_path %>
</button>
<table class="table ">
  <tr>
    <th>Название</th>
    <th>Описание</th>
    <th colspan="3"></th>
  </tr>
  <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>

        <td>
          <button class = "btn btn-success btn-mini">
            <%= link_to 'Просмотр', article_path(article) %>
          </button>
        </td>
        <td>
          <button class = "btn btn-warning btn-mini">
            <%= link_to 'Редактровать', edit_article_path(article) %>
          </button></td>
        <td>
          <button class = "btn btn-danger btn-mini">
            <%= link_to 'Удалить', article_path(article),
                        method: :delete,
                        data: { confirm: 'Действительно удалить?' }%>
          </button>
        </td>
      </tr>

  <% end %>
</table>